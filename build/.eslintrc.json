{
  "env": {
    "node": true,
    "browser": true,
    "commonjs": false,
    "es6": true
  },
  "plugins": [],
  "extends": [
    "airbnb-base",
    "plugin:vue/recommended"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "import/extensions": ["always", {"ignorePackages": true}],
    "no-underscore-dangle": [
      2,
      {
        "allow": ["_id"]
      }
    ],
    "import/no-extraneous-dependencies": 0
  }
}
